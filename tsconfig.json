{
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./game/dist",
    "rootDir": "./game/src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false
  },
  "include": [
    "game/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "game/dist"
  ]
}